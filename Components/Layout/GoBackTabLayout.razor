@inherits LayoutComponentBase
@inject NavigationManager NavManager

<div class="fixed top-0 left-0 w-full bg-white shadow-md flex items-center p-2 lg:p-4">
    <button @onclick="GoBack" class="p-2 rounded-full hover:bg-gray-200">
        <img src="images/back-arrow.svg" alt="back-arrow" class="h-6 w-6"/>
    </button>
</div>

<div class="mt-16">
    @Body
</div>

@code {

    private void GoBack()
    {
        if (NavManager.Uri != NavManager.BaseUri)
        {
            NavManager.NavigateTo("javascript:history.back()");
        }
    }

}